root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
trim_trailing_whitespace = true

[*.js]
quote_type = single

[*.{js,json}]
spaces_around_brackets = inside
indent_brace_style = K&R

[*.{js,json,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8
